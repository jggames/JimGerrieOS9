)NEXT I1280 RETURN 1320 RUN GFX("ALPHA") \ PRINT CHR$(12); 1370 PRINT TAB(10); "** BOMBS AWAY **"PRINT PRINT "Game rules are simple:"PRINT 1390 PRINT "Blow up your opponent by firing"PRINT "at the right angle and velocity"1410 PRINT "while compensating for wind and"PRINT "terrain.  Each gunner must"1420 PRINT "enter the angle (0-90) and the"1440 PRINT "velocity (max. 350) separated"PRINT "by a comma. 0,0 to see field."PRINT 1460 PRINT "Players' names:"1470 FOR P=1 TO 21480 PRINT "Player "; P; INPUT ", ",P$(P)1490 NEXT P1510 INPUT "How many battles to play? ",GN1520 IF GN<1 OR GN>100 THEN PRINT "Please, don't joke around!"GOTO 1510ENDIF 1530 GOTO 2401580 RUN GFX("ALPHA") \ PRINT CHR$(12); 1620 PRINT "THE SCORE:  "; P$(1); PRINT "="; SCORE(1)PRINT TAB(13); P$(2); PRINT "="; SCORE(2)1630 IF SCORE(1)>SCORE(2) THEN WI=1ENDIF 1640 IF SCORE(1)<SCORE(2) THEN WI=2ENDIF 1650 IF SCORE(1)=SCORE(2) THEN 16801660 PRINT P$(WI); " is the winner!"1670 GOTO 17001680 PRINT 1690 PRINT "A tie!"1700 RUN GFX("quit") \ END 1720 RUN GFX("MODE",0,1)FOR KK=1 TO 151730 SHOTX=INT(X) \SHOTY=INT(ABS(Y-192)) \RUN GFX("CIRCLE",SHOTX
