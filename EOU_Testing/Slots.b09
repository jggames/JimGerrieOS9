PROCEDURE SlotsBASE 0DIM ct,ta,tc,r1,r2,r3,po:INTEGERDIM w1$,w2$,w3$,f$:STRING[41]DIM a$:STRING[2]100 REM Slot MachineDIM x$,y$,z$:STRING[41]110 tc=0120 ta=0140 PRINT "Press ENTER to pull lever"150 RUN inkey(a$) \r1=RND(20) \ IF a$="" THEN 150IF a$="q" OR a$="Q" THEN END  \ ENDIF IF a$<>CHR$(13) THEN 150160 tc=tc+1170 r1=RND(20)+1 \r2=RND(20)+1 \r3=RND(20)+1175 IF r1>20 OR r2>20 OR r3>20 THEN 170180 w1$="O M P C P O 7 B-O C - P O P M P O P - P "190 w2$="C P C 7OC B P-B C O B MOP B C - O C B MO"200 w3$="B O P B O L B MOB P L B P B 7-L B MOB L "x$=MID$(w1$,r1*2-1,2)y$=MID$(w2$,r2*2-1,2)z$=MID$(w3$,r3*2-1,2)210 f$=x$+y$+z$RUN names(x$)RUN names(y$)RUN names(z$)PRINT x$PRINT y$PRINT z$230 po=-1240 IF MID$(f$,1,4)="C C " THEN po=5 \ GOTO 320 \ ENDIF 250 IF MID$(f$,1,2)="C " THEN po=2 \ GOTO 320 \ ENDIF 260 IF MID$(f$,1,2)="O " AND (MID$(f$,3,1)="O" OR MID$(f$,4,1)="O" ) AND (MID$(f$,5,1)="O" OR MID$(f$,6,1)="O" OR MID$(f$,5,2)="7-")  THEN po=10 \ GOTO 320ENDIF 270 IF MID$(f$,1,3)="P P" AND (MID$(f$,5,2)="P " OR MID$(f$,5,2) ="7-") THEN po=14 \ GOTO 320 \ ENDIF 280 IF MID$(f$,1,4)="B-B " AND (MID$(f$,5,2)="7-" OR MID$(f$,5,2 )="B ") THEN po=18 \ GOTO 320 \ ENDIF 290 IF MID$(f$,1,3)="M M" AND (MID$(f$,5,1)="M" OR MID$(f$,6,1)= "-") THEN po=100 \ GOTO 320 \ ENDIF 300 IF (MID$(f$,1,1)="-" OR MID$(f$,2,1)="-") AND (MID$(f$,3,1)= "-" OR MID$(f$,4,1)="-") AND MID$(f$,5,2)="7-" THEN po=100 \ GOTO 320 \ ENDIF 310 IF MID$(f$,1,6)="7 7O7-" THEN po=200 \ GOTO 320 \ ENDIF 320 PRINT "Payoff: "; po330 ta=ta+po340 PRINT "Coins: "; ta350 PRINT "Pulls: "; tc360 PRINT 370 GOTO 140PROCEDURE NamesPARAM a$:STRING[41]IF a$="C " THEN a$="Cherry" \ ENDIF IF a$="O " THEN a$="Orange" \ ENDIF IF a$="B " THEN a$="Bell" \ ENDIF IF a$="M " THEN a$="Melon" \ ENDIF IF a$="P " THEN a$="Plum" \ ENDIF IF a$="7 " THEN a$="Seven" \ ENDIF IF a$="L " THEN a$="Lemon" \ ENDIF IF a$="- " THEN a$="Bar" \ ENDIF IF a$="B-" THEN a$="Bell and Bar"ENDIF IF a$="7O" THEN a$="Seven and Orange"ENDIF IF a$="MO" THEN a$="Melon and Orange"ENDIF IF a$="P-" THEN a$="Plum and Bar"ENDIF IF a$="7-" THEN a$="Seven and Bar"ENDIF END END 